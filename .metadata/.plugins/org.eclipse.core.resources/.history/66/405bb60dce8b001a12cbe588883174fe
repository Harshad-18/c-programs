#include <stdio.h>

float largeNumber(float [],int);

int main() {

	float numbers[5] = {983, 2.9, 34, 433, 1000.567};
	float *p;
	p = &numbers[0];

	float result = largeNumber(p, 5);

	printf("Largest number is %f",result);

	return 0;
}
float largeNumber(float a[],int size){
	float num=0;
	for(int i = 0 ;i < size ;i++){

		if(a[0] > a[i+1]){

			num =num + a[0];
		}

		else{

			num =num + a[i+1] ;


		}

	}
	return num;
}
