#include <stdio.h>
#include <stdlib.h>


int main() {
	setbuf(stdout, NULL);

    int n;
    float *p, sum = 0;

    puts("Enter n: ");
    scanf("%d", &n);

    p = (float*) calloc(n , sizeof(float));

    if (p == NULL) {
        puts("Memory allocation failed.");
        exit(0);
    } else {
        puts("Enter data: ");

        /* User input. */
        for (int i = 0; i < n; i++) {
            scanf("%f", p + i);    // Feeling confused? Check detailed explanation at the bottom.
        }

        /* Find the sum. */
        for (int i = 0; i < n; i++) {
            sum = sum + p[i];    // Accessing elements stored in the memory block by using 'p[i]'.
        }
        int c,newsize;
        printf("Enetr the number extra values : ");
        scanf("%d", &c);

        newsize = c + n;

        ptr= (int*) realloc(ptr, newsize * sizeof(int));

        for(i=n; i<newsize ;i++){
        	p[i]=i+1;
        	scanf("%f", p+i);
        }
        for(i=0 ; i<newsize ;i++){

        	sum=sum+p[i];

        }


        printf("The sum is %.2f", sum);
    }
    free(ptr);
    return 0;
}
